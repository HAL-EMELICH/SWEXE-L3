<% if @profile.errors.present? %>
  <h3>There are errors</h3>
  <ul>
    <% @profile.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @profile do |f| %>
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>
  
  <%= f.label :detail, '詳細' %>
  <%= f.text_field :detail %>
  
  <%= f.label :image, '画像' %>
  <%= f.file_field :image %>
  
  <%= f.submit '更新' %>
<% end %>